{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noImplicitAny": false,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es6",
      "esnext.asynciterable"
    ],
    "outDir": "./dist"
  },
  "files": [
    "./src/index.ts"
  ],
  "include": ["src/*"],
  "exclude": [
    "node_modules/*",
    "dist/*",
    "tests/*"
  ]
}